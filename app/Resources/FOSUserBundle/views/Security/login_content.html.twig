{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
{% if error %}
    <div class="col-sm-4 col-sm-offset-4" style="color: red">Netinkami prisijungimo duomenys</div>
{% endif %}
    <form novalidate action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
        <div class="col-sm-4 col-sm-offset-4">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <label class="control-label" for="username">Naudotojas</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <label class="control-label" for="password">Slapta≈æodis</label>
                <input type="password" class="form-control" id="password" name="_password" required="required" />
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="checkbox  col-sm-offset-1">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        <label for="remember_me" style="padding-left: 1px">
                            Prisiminti
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" id="_submit" name="_submit" value="Prisijungti"/>
            </div>
        </div>
    </form>
</div>