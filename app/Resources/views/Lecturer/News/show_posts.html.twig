{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/timeline.css') }}">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <div>
            <div class="page-header">
                <h1 id="timeline">Naujienos</h1>
                <a class="btn btn-success" role="button" href="{{ path('lecturer_add_post', {'subject_id': subject_id})}}">Pridėti naujieną</a>
            </div>
            <ul class="timeline">
                {% for i, post in posts %}
                    <li {{ i % 2 == 1 ? 'class="timeline-inverted"'}}>
                        <div class="timeline-badge info"><i class="glyphicon glyphicon-info-sign"></i></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4 class="timeline-title">
                                    <a data-toggle="collapse" href="#timeline-body-{{ post.id }}">{{ post.title }}</a>
                                </h4>
                                <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> {{ post.publishedAt|date('Y-m-d H:i') }}</small></p>
                            </div>
                            <div id='timeline-body-{{ post.id }}' class="timeline-body collapse">
                                <p>{{ post.content | raw}}</p>
                            </div>
                            <div class="timeline-body">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                                        <i class="glyphicon glyphicon-cog"></i> <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <div class="section">
                                            <a href="{{ path('lecturer_edit_post', {'subject_id': subject_id, 'post_id': post.id}) }}" class="btn btn-block btn-success">
                                                Edit
                                            </a>
                                        </div>
                                        <form action="{{ url('lecturer_delete_post', {'subject_id': subject_id, 'post_id': post.id}) }}" method="post" data-confirmation="true" id="delete-form">
                                            <button type="submit" class="btn btn-block btn-danger">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                                Delete
                                            </button>
                                        </form>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
