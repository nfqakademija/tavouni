{% extends 'Student/student_base.html.twig' %}
{% set active = "student" %}
{% block content %}
    <h2>Naujienos</h2>
    <div class="Posts">
    {% for post in posts %}
        <div class="well">
            <div class="panel-heading" >
                <h2 class="Post-title">{{ post.title }}</h2>
                <span class="text">{{ post.publishedAt|date('Y-m-d H:i') }}</span>
            </div>
            {#<div class="text-muted"> {{ post.publishedAt|date('Y-m-d H:i') }}</div>#}
            <div class="well Post-content">
                <p class="panel-content text-primary Post-text">{{ post.content }}</p>
            </div>
            <div class="panel-footer">
                {{ post.subject.name }}
                <div> {{ post.author.name }}</div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}