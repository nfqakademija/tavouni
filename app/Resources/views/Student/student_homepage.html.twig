{% extends 'Student/student_base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/fullcalendar/css/fullcalendar/fullcalendar.min.css') }}" />
{% endblock %}

{% set active = "student_index" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1 align="center">Naujienos</h1>
                <div class="Posts">
                    {% for post in posts %}
                        <div class="well">
                            <div class="panel-heading" >
                                <h4 class="Post-title">
                                    <a data-toggle="collapse" href="#post-content-{{ post.id }}">{{ post.title }}</a>
                                </h4>
                                <span class="text">{{ post.publishedAt|date('Y-m-d H:i') }}</span>
                            </div>
                            <div id="post-content-{{ post.id }}" class="panel-content collapse">
                                <p class="panel-content text-primary Post-text ">{{ post.content }}</p>
                            </div>
                            <div class="panel-footer">
                                {{ post.subject.name }}
                                <div> {{ post.author.name }}</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-4">
                {% include '@FullCalendar/Calendar/calendar.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/moment.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/moment.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/fullcalendar.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/locale-all.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/oneDayCalendar.js') }}"></script>
{% endblock %}